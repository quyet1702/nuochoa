@page
@model NewsModel
<style>

    .section-news h2{
        margin: 25px 0px;
        position: relative;
        padding: 0 15px 0 20px;
    }
    @* .section-news h2::before{
        content: "/";
        font-size: 30px;
        position: absolute;
        bottom: -9px;
        left: 1px;
        font-weight: bold;
        color: red;
    } *@
     .section-news ul {
        list-style-type: disc;
        list-style: outside;
        padding: 20px 40px;
     }
     .section-news ul li{
        line-height: 1.5;
        font-size: 15px;
     }
     .section-news .blog-item{
        margin-top: 29px;
        width: 100%;
        margin-bottom: 15px;
        overflow: hidden;
     }
     .section-news .blog-img {
        width: 33%;
        margin-right: 15px;
        float: left;
     }
     .section-news .blog-img img{
        width: 100%;
        height: auto;
     }
     .section-news .blog-content {
     }
     .section-news .blog-title a{
        font-size: 19px;
        color: #333;
        line-height: 1.3;
     }
     .section-news .blog-date {
        color:#726c6c;
        margin-bottom: 10px;
     }
     .section-news hr {
        width: 100%;
        border: 0px;
        border-bottom:1px solid #cfcfcf;
     }
     .section-news p {
        line-height: 1.3;
        display: block;
        color: #888;
     }
</style>
<section class="section-news">
    <div class="container">
        <h2>Mới Nhất</h2>
        @{
            int i=0;
        }
        @foreach (var item in Model.news)
        {
            @if(i==0){
                <hr class="hr-style">
                    i++;
            }
            else{
                <hr>
            }
        <div class="blog-item">
            <div class="blog-img">
                <img src="~/@item.Avatar" alt="Không tải được ảnh">
            </div>
            <div class="blog-content">
                <h3 class="blog-title"><a asp-page="BlogDetails" asp-route-id="@item.Id">@item.Title</a></h3>
                <p class="blog-date">05:00 25/10/2022</p>
                <p class="blog-description">@item.Descriptions</p>
            </div>
        </div>
        }
    </div>
    <script>
        var index = 4;
        var navItem = document.querySelectorAll(".navbar .nav-menu> .item> a");
        for(var i=0;i<navItem.length;i++){
            navItem[i].className ='';
            if(i==index){
                 navItem[i].className ='active';
            }
        }
        var navMobileItem = document.querySelectorAll(".nav-mobile > .menu> li> a");
        for(var i=0;i<navMobileItem.length;i++){
            navMobileItem[i].className ='';
            if(i==index){
                 navMobileItem[i].className ='active';
            }
        }
    </script>
</section>